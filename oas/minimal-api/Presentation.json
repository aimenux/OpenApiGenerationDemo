{
  "openapi": "3.0.1",
  "info": {
    "title": "Presentation | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/api/todos": {
      "get": {
        "tags": [
          "Todos"
        ],
        "summary": "Retrieves a list of todos",
        "description": "Gets all todos, optionally filtered by category",
        "operationId": "GetTodos",
        "parameters": [
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Todo": {
        "required": [
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "nullable": true
          },
          "isCompleted": {
            "type": "boolean"
          },
          "creationDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Todos"
    }
  ]
}